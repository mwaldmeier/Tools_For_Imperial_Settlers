<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="playerGoodHolderStyle">
        <item name="android:padding">5sp</item>
    </style>

    <style name="stoneStyle">
        <item name="android:src">@mipmap/ic_stone</item>
        <item name="android:tag">stoneImg</item>
    </style>
    <style name="woodStyle">
        <item name="android:src">@mipmap/ic_wood</item>
        <item name="android:tag">woodImg</item>
    </style>
    <style name="foodStyle">
        <item name="android:src">@mipmap/ic_food</item>
        <item name="android:tag">foodImg</item>
    </style>
    <style name="workerStyle">
        <item name="android:src">@mipmap/ic_worker</item>
        <item name="android:tag">workerImg</item>
    </style>
    <style name="goldStyle">
        <item name="android:src">@mipmap/ic_gold</item>
        <item name="android:tag">goldImg</item>
    </style>
    <style name="defenceStyle">
        <item name="android:src">@mipmap/ic_defence</item>
        <item name="android:tag">defenceImg</item>
    </style>
    <style name="razeStyle">
        <item name="android:src">@mipmap/ic_raze</item>
        <item name="android:tag">razeImg</item>
    </style>

    <style name="playerScoreBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80sp</item>
        <item name="android:paddingTop">15sp</item>
        <item name="android:paddingEnd">5sp</item>
        <item name="android:paddingStart">5sp</item>
        <item name="android:paddingBottom">10sp</item>
    </style>
    <style name="plusBtnStyle">
        <item name="android:layout_width">50sp</item>
        <item name="android:layout_height">50sp</item>
        <item name="android:text">+</item>
    </style>

    <style name="minusBtnStyle">
        <item name="android:layout_width">50sp</item>
        <item name="android:layout_height">50sp</item>
        <item name="android:text">-</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
</resources>
