<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mwaldmeier.toolsforimperialsettlers.PlayerScoreSheetFragment"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/playerScoreSheetFragmentLayout"
        android:layout_margin="10dp"
        android:layout_height="100dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Player"
            android:id="@+id/playerTextLbl"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="#"
            android:id="@+id/playerIDLbl"
            android:layout_alignParentTop="true"
            android:layout_alignEnd="@id/playerTextLbl" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="##"
            android:id="@+id/playerScore"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/addOneScoreBtn"
            android:layout_below="@+id/playerIDLbl"
            android:layout_centerHorizontal="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/minusOneScoreBtn"
            android:layout_toEndOf="@id/addOneScoreBtn"
            android:layout_alignTop="@id/addOneScoreBtn"/>

    </RelativeLayout>
</FrameLayout>
